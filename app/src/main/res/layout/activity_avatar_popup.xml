<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="cchapy.cc.AvatarPopup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/shop_pop_ava_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                app:srcCompat="@drawable/character_girl_luckycat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shop_pop_ava_star1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/symbol_star" />

                <ImageView
                    android:id="@+id/shop_pop_ava_star2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/symbol_star" />

                <ImageView
                    android:id="@+id/shop_pop_ava_star3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/symbol_star" />

                <TextView
                    android:id="@+id/shop_pop_ava_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="50% off Big Mac"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />
            </LinearLayout>

            <TextView
                android:id="@+id/shop_pop_ava_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed eros dolor, egestas dapibus eros ut, sodales rhoncus dui. Etiam nec velit non dolor malesuada posuere." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shop_pop_ava_leaf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost: 8888"
                    android:textAlignment="viewStart"
                    android:textAppearance="@android:style/TextAppearance.Material.Large" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                    app:srcCompat="@drawable/symbol_leaf" />

                <Button
                    android:id="@+id/shop_pop_ava_purchase"
                    style="@android:style/Widget.Material.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="buy"
                    android:text="@string/Buy"
                    android:textColorLink="@color/colorPrimary" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
